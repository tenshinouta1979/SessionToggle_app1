@page
@model App1Simulation.Pages.LoginModel
@{
    ViewData["Title"] = "Login to App1";
    Layout = "_Layout";
}

<div class="flex items-center justify-center min-h-screen -mt-16">
    <div class="bg-white rounded-xl shadow-2xl p-8 md:p-12 w-full max-w-sm text-center border-t-8 border-blue-500">
        <h2 class="text-3xl font-extrabold text-gray-900 mb-6">Login to App1</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md mb-4" role="alert">
                <p class="font-bold">Error!</p>
                <p class="text-sm">@Model.ErrorMessage</p>
            </div>
        }

        <form method="post" class="space-y-6">
            <div>
                <label for="username" class="sr-only">Username</label>
                <input
                    type="text"
                    id="username"
                    name="Username"
                    value="user"
                    class="appearance-none rounded-md relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-lg"
                    placeholder="Username"
                    required
                >
            </div>
            <div>
                <label for="password" class="sr-only">Password</label>
                <input
                    type="password"
                    id="password"
                    name="Password"
                    value="password123"
                    class="appearance-none rounded-md relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-lg"
                    placeholder="Password"
                    required
                >
            </div>

            <div>
                <button
                    type="submit"
                    class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-lg font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out shadow-lg transform hover:-translate-y-0.5"
                >
                    Log In
                </button>
            </div>
        </form>
    </div>
</div>
