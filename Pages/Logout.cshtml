@page
@model App1Simulation.Pages.LogoutModel
@{
    ViewData["Title"] = "Logged Out";
    Layout = "_Layout";
}

<div class="text-center bg-white p-8 rounded-xl shadow-lg mt-10">
    <h2 class="text-4xl font-bold text-blue-700 mb-6">You have been logged out.</h2>
    <p class="text-lg text-gray-700 mb-4">Your App1 session has ended.</p>
    <div class="mt-8">
        <a asp-page="/Login" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out">
            Log In Again
        </a>
    </div>
</div>
